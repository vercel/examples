                        <div class="pt-2">
                            <button type="submit" class="w-full bg-slate-900 text-white font-bold py-4 rounded-xl hover:bg-slate-800 transition-colors shadow-lg flex justify-center items-center gap-2">
                                Enviar solicitud
                                <i data-lucide="send" class="w-4 h-4"></i>
                            </button>
                        </div>
                        <p class="text-center text-xs text-slate-400 mt-4">
                            Tus datos se enviarán de forma segura.
                        </p>
                    </form>
                </div>
            </div>
        </section>

        <footer class="bg-slate-900 border-t border-slate-800 py-8 text-center text-slate-500 text-sm">
            <p id="copyright"></p>
        </footer>
    </main>

    <!-- Scripts para funcionalidad -->
    <script>
        // Inicializar iconos
        lucide.createIcons();

        // Poner año actual en footer
        document.getElementById('copyright').innerText = `© ${new Date().getFullYear()} Prolink Iberia. Todos los derechos reservados.`;

        // Función para actualizar campos según selección
        function updateFormFields() {
            const select = document.getElementById('interestSelect');
            const selectedValue = select.value;
            
            // Elementos DOM
            const insuranceFields = document.getElementById('insurance-fields');
            const surnameField = document.getElementById('field-surname');
            const repsolFields = document.getElementById('repsol-fields');
            
            // Lógica de visibilidad
            const isOcaso = selectedValue.includes('Ocaso');
            const isRepsol = selectedValue.includes('Repsol');

            if (isOcaso) {
                // Mostrar campos seguro
                insuranceFields.classList.remove('hidden-field');
                insuranceFields.classList.add('visible-field');
                surnameField.classList.remove('hidden-field');
                surnameField.classList.add('visible-field');
                
                // Ocultar Repsol
                repsolFields.classList.add('hidden-field');
                repsolFields.classList.remove('visible-field');
            } else if (isRepsol) {
                // Mostrar campo factura
                repsolFields.classList.remove('hidden-field');
                repsolFields.classList.add('visible-field');
                
                // Ocultar seguros
                insuranceFields.classList.add('hidden-field');
                surnameField.classList.add('hidden-field');
            } else {
                // Ocultar todo (caso Telecom o General)
                insuranceFields.classList.add('hidden-field');
                surnameField.classList.add('hidden-field');
                repsolFields.classList.add('hidden-field');
            }
        }

        // Función inteligente: Baja al formulario, selecciona y actualiza campos
        function selectOffer(offerName) {
            const select = document.getElementById('interestSelect');
            select.value = offerName;
            
            // Actualizar campos visibles
            updateFormFields();
            
            // Bajar suavemente
            document.getElementById('contacto').scrollIntoView({ behavior: 'smooth' });
            
            // Efecto visual
            const formCard = document.querySelector('#contacto .bg-white');
            formCard.classList.add('ring-4', 'ring-blue-500', 'ring-opacity-50');
            setTimeout(() => {
                formCard.classList.remove('ring-4', 'ring-blue-500', 'ring-opacity-50');
            }, 1000);
        }
    </script>
</body>
</html>
