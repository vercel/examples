  <script>
    // Optional: make the timeline progress animate subtly on load (purely decorative)
    (function() {
      const progress = document.querySelector('.timeline .progress');
      const knob = document.querySelector('.timeline .knob');
      if (!progress || !knob) return;
      let pct = 22; // starting percent
      setInterval(() => {
        pct += Math.random() * 2.5; // small random increments
        if (pct > 96) pct = 6;      // loop around
        progress.style.width = pct + '%';
        knob.style.left = pct + '%';
      }, 1200);
    })();
  </script>
