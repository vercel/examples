<script>
/* === DATA PRODUK === */
const products = [
  {name:"PT PRIBADI MARZZ",price:"Rp 50K.000",benefit:`• FREE BANYAK RESS SC<br>• MASUK GB FUNCT<br>• DAPET BANYAK BASE KECE<br>• TK SC LUFFY INFINITY<br>• DLL`},
  {name:"Script Bug Nika Via Tele",price:"Rp 45.000",benefit:`• BISA OPEN MURBUG<br>• FREE UP<br>• DLL`},
  {name:"Script Bug Nted Via Wa/Tele",price:"Rp 40.000",benefit:`• BISA OPEN MURBUG<br>• FREE UP PERMANENT<br>• DLL`},
    {name:"Reseller Script Nted",price:"Rp 60.000",benefit:`• BISA OPEN MURBUG<br>• FREE UP PERMANENT<br>• FREE AKSES ADDB<br>• BISA JUAL SC<br>• DLL`},
  {name:"Resseler Script Luffy Infinity",price:"Rp 30.000",benefit:`• BISA OPEN MURBUG<br>• FREE UP PERMANENT<br>• BISA JUAL SC<br>• BISA JUAL SC<br>• FREE AKSES ADDB<br>• INSYAALLAH BALMOD<br>• DLL`},
  {name:"Resseler Script itachi Via Tele",price:"Rp 30.000",benefit:`• BISA JUAL SC<br>• FREE UP<br>• DLL`},
  {name:"Script angkasa Via Tele",price:"Rp 35.000",benefit:`• BISA OPEN MURBUG<br>• FREE UP 3×<br>• DLL`},
  {name:"Open Murbug Via Tele",price:"20.000",benefit:`• BISA BUG WA GURU,MANTAN,TEMEN,DLL<br>• SC YANG DI GUNAKAN GACOR<br>• DLL`}
];

/* === THEME === */
const root=document.documentElement;const themeKey='kayzen-theme';
function applyTheme(t){root.setAttribute('data-theme',t);localStorage.setItem(themeKey,t);}
function initTheme(){const saved=localStorage.getItem(themeKey);const prefers=window.matchMedia('(prefers-color-scheme: dark)').matches?'dark':'light';applyTheme(saved||prefers);}
function toggleTheme(){const current=root.getAttribute('data-theme');const next=current==='dark'?'light':'dark';applyTheme(next);}
initTheme();

/* === NAVIGASI === */
function toPage(id){
  document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
  document.getElementById(id).classList.add('active');
  document.querySelectorAll('.product-detail').forEach(d=>d.classList.remove('show'));
}

/* === COPY CLIPBOARD === */
function copyText(text){
  navigator.clipboard.writeText(text).then(()=>{
    const toast=document.getElementById('toast');
    toast.textContent='Nomor disalin ✅';
    toast.classList.add('show');
    setTimeout(()=>toast.classList.remove('show'),2000);
  });
}

/* === RENDER PRODUK === */
const productsContainer=document.getElementById('productsContainer');
products.forEach((p,i)=>{
  const productDiv=document.createElement('div');
  productDiv.className='product-item';
  productDiv.innerHTML=`
    <button class="product-button" onclick="showProductDetail(${i})">
      <div class="product-info">
        <div><div class="product-name">${p.name}</div><div class="product-price">${p.price}</div></div>
      </div>
      <div class="product-benefit"><strong>Benefit:</strong><br>${p.benefit}</div>
    </button>
    <div class="product-detail" id="detail-${i}">
      <h3>${p.name}</h3>
      <div class="price">${p.price}</div>
      <div class="benefit-title">Benefit:</div>
      <div class="benefit">${p.benefit}</div>
      <button class="buy-now-btn" onclick="buyNow()">Beli Sekarang</button>
    </div>`;
  productsContainer.appendChild(productDiv);
});

/* === FUNGSI PRODUK === */
function showProductDetail(index){
  document.querySelectorAll('.product-detail').forEach(d=>d.classList.remove('show'));
  document.getElementById(`detail-${index}`).classList.add('show');
}
function buyNow(){toPage('payment');}
</script>
